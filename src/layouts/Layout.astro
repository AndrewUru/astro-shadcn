---
import { Sidebar } from "@/components/Sidebar";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const navigation = [
  {
    title: "Home",
    path: "/",
    icon: "Home"
  },
  {
    title: "Course",
    path: "/course",
    icon: "Waves"
  },
  {
    title: "README",
    path: "/readme",
    icon: "FileText"
  },
  {
    title: "MIT License",
    path: "/mit-license",
    icon: "Scale"
  }
];

const { 
  title,
  description = "A beautiful dashboard built with Astro and shadcn/ui",
} = Astro.props;

// Critical CSS variables
const criticalStyles = `
  :root {
    --background: 0 0% 100%;
    --foreground: 240 10% 3.9%;
    --radius: 0.5rem;
  }
  
  /* Core layout styles */
  body {
    margin: 0;
    min-height: 100vh;
    opacity: 0;
    animation: fadeIn 0.1s ease-in forwards;
  }
  
  @keyframes fadeIn {
    to { opacity: 1; }
  }
  
  /* Critical layout classes */
  .flex { display: flex }
  .min-h-screen { min-height: 100vh }
  .bg-background { background-color: hsl(var(--background)) }
`;

// Resource hints
const preconnectUrls = [
  'https://fonts.googleapis.com',
  'https://fonts.gstatic.com'
];

const preloadAssets = [
  { url: '/icon.svg', as: 'image' },
  { url: '/logo.png', as: 'image' }
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="preconnect" href="/" crossorigin>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Resource hints -->
    {preconnectUrls.map(url => (
      <link rel="preconnect" href={url} crossorigin />
    ))}
    
    <!-- Preload critical assets -->
  
    
    <title>{title}</title>

    <!-- Defer non-critical JS -->
    <script>
      // Theme initialization
      const theme = localStorage.getItem('theme') || 
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.classList[theme === 'dark' ? 'add' : 'remove']('dark');
    </script>
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="flex min-h-screen optimize-gpu">
      <Sidebar navigation={navigation} client:load />
      <div id="main-content" class="flex-1 min-h-screen pl-[80px]">
        <main class="py-6 min-h-[calc(100vh-3rem)] max-w-[1000px] mx-auto px-4">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html> 