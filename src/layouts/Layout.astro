---
import { Sidebar } from "@/components/Sidebar";
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const navigation = [
  {
    title: "Home",
    path: "/",
    icon: "Home"
  },
  {
    title: "Stream",
    path: "/stream",
    icon: "Waves"
  },
  {
    title: "README",
    path: "/readme",
    icon: "FileText"
  },
  {
    title: "MIT License",
    path: "/mit-license",
    icon: "Scale"
  }
];

const { 
  title,
  description = "A beautiful dashboard built with Astro and shadcn/ui",
} = Astro.props;

// Extract critical CSS variables
const criticalStyles = `
  :root {
    --background: 0 0% 100%;
    --foreground: 240 10% 3.9%;
    --radius: 0.5rem;
  }
  
  /* Prevent layout shifts with minimum heights */
  body {
    margin: 0;
    min-height: 100vh;
  }
  
  /* Ensure consistent main content height */
  main {
    min-height: calc(100vh - 2rem);
  }
  
  /* Critical above-the-fold styles */
  .flex { display: flex; }
  .min-h-screen { min-height: 100vh; }
  .bg-background { background-color: hsl(var(--background)); }
`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Inline critical styles -->
    <style is:inline set:html={criticalStyles}></style>
    
    <!-- Preload critical assets -->
    <link rel="preload" href="/icon.svg" as="image" type="image/svg+xml">
    
    <title>{title}</title>

    <script is:inline>
      const getThemePreference = () => {
        if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
          return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light";
      };
      const isDark = getThemePreference() === "dark";
      document.documentElement.classList[isDark ? "add" : "remove"]("dark");

      if (typeof localStorage !== "undefined") {
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains("dark");
          localStorage.setItem("theme", isDark ? "dark" : "light");
        });
        observer.observe(document.documentElement, {
          attributes: true,
          attributeFilter: ["class"],
        });
      }
    </script>
    <script>
      // Initialize layout
      import { initLayout } from '../stores/layout'
      initLayout()
    </script>
  </head>
  <body class="min-h-screen bg-background font-sans antialiased">
    <div class="flex min-h-screen">
      <Sidebar 
        navigation={navigation} 
        client:load 
      />
      
      <div id="main-content" class="flex-1 min-h-screen">
        <main class="py-6 min-h-[calc(100vh-3rem)]">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html> 